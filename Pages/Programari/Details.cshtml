@page
@model Salon_Infrumusetare.Pages.Programari.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Programare</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Programare.Client)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Programare.Client.Nume)
            @Html.DisplayFor(model => model.Programare.Client.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Programare.Specialist)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Programare.Specialist.Nume)
            @Html.DisplayFor(model => model.Programare.Specialist.Prenume)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Programare.Serviciu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Programare.Serviciu.Nume)
            -
            @Html.DisplayFor(model => model.Programare.Serviciu.Pret)
            lei
            <br />
            Durata: 
            @Html.DisplayFor(model => model.Programare.Serviciu.OraProgramare)
            minute
        </dd>
        <dt class="col-sm-2">
            Data si ora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Programare.Ora)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Programare?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
